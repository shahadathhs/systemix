{
  "extends": "@systemix/typescript/nextjs.json",
  "compilerOptions": {
    "paths": { "@/*": ["./*"] },
    "moduleResolution": "bundler",
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
